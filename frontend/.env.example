# Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_API_VERSION=v1

# Application Settings
VITE_APP_NAME="Udyam Registration Portal"
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=true

# External Services
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
VITE_GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi
VITE_THEME=government

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Government Portal Settings
VITE_MINISTRY_NAME="Ministry of Micro, Small & Medium Enterprises"
VITE_PORTAL_HELPLINE=1800-180-6763
VITE_PORTAL_EMAIL=help@udyogaadhaar.gov.in
